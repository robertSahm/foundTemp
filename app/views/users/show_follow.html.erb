<%= provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.username %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
      </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.empty? %>
      <p>None at this time</p>
    <% else %>
      <div class="user_avatars">
        <ul class="users">
        <% @users.each do |user| %>
          <li><%= link_to gravatar_for(user), user %>
          <%= link_to user.username, user %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>