<!-- Profile page(s) -->

<div class="profileWrapper">
  <div class="profilePic">
  <%= gravatar_for @user %>
  </div>
  <h2 class>
    <%= @user.username %>
    <%= @user.handle %>
    <%= @user.email %>
    <%= number_to_phone(@user.phone, :area_code => true)  %>
    <%= @user.full_address %>
  </h2>
  
  <%= link_to "Edit Profile", edit_user_path(current_user) %>
  <%= link_to "Check In" %>
  <%= link_to "Public/Private" %>
  
  <div class="bs-docs-example">
    <ul id="myTab" class="nav nav-tabs">
      <li class="active">
        <a href="#personality" data-toggle="tab">
          Personality
        </a>
      </li>
      <li>
        <a href="#network" data-toggle="tab">
          Network
        </a>
      </li>
      <li>
        <a href="#settings" data-toggle="tab">
          Settings
        </a>
      </li>
      <li>
        <a href="#info" data-toggle="tab">
          App Info
        </a>
      </li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="personality">
        <%= link_to "Personality" %>
        <%= link_to "Favorites" %>
        <%= link_to "Special Ocassions" %>
      </div>   
      <div class="tab-pane fade" id="network">
        <%= link_to "Network" %>
        <%= link_to "Suggestions" %>
      </div> 
      <div class="tab-pane fade" id="settings">            
        <%= link_to "Update Social Networks" %>
        <%= link_to "Notification Settings" %>
        <%= link_to "Manage Credit Cards" %>
        <%= link_to "Transaction History" %>
      </div>
      <div class="tab-pane fade" id="info">            
        <%= link_to "FAQ" %>
        <%= link_to "Contact Us" %>
        <%= link_to "Quick Tips" %>
        <%= link_to "Version" %>
      </div>
    </div>
  </div>
</div>

