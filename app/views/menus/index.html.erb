<h1>Listing menus</h1>

<table>
  <tr>
    <th>Provider</th>
    <th>Item</th>
    <th>Price</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.provider_id %></td>
    <td><%= menu.item_id %></td>
    <td><%= menu.price %></td>
    <td><%= menu.position %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

